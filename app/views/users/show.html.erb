<div class="main">
  <div class="profile-info">
    <h2>プロフィール</h2>
    <h3><%= @user.name %>のページ</h3>
    <p>プロフィール画像</p>
    <img src="<%= @user.image %>">
    <p>名前: <%= @user.name %></p>
    <p>メールアドレス: <%= @user.email if @user.id == current_user.id %></p>
  </div>
  <div class="link-menu">
    <%= link_to 'プロフィール編集', edit_user_path(current_user.id), class: 'btn btn-info' if @user.id == current_user.id %>
    <%= link_to '新規投稿', new_picture_path, class: 'btn btn-primary'  %>
    <%= link_to '投稿一覧', pictures_path, class: 'btn btn-warning'  %>
    <%= link_to 'ユーザーリスト', users_path, class: 'btn btn-danger' %>
  </div>
</div>
