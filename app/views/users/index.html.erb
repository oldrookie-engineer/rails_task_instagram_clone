<div class="main">
  <h1>ユーザーリスト</h1>
  <table class="contributer-list">
    <thead>
      <tr>
        <th>ユーザー</th>
        <th>メニュー</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td class="user-name"><%= link_to user.name, user_path(user.id) %></td>
          <td><%= link_to '編集', edit_user_path(user.id) if user.id == current_user.id %></td>
        </tr>
      <% end %>
    </tbody>
  </table><br>
  <div class="link-menu">
  <%= link_to '新規投稿', new_picture_path , class: 'btn btn-primary' %>
  </div>
</div>
