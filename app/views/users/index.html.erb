<h1>投稿者一覧</h1>
<table>
  <thead>
    <tr>
      <th>投稿者</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to '詳細', user_path(user.id) %></td>
        <td><%= link_to '編集', edit_user_path(user.id) if user.id == current_user.id %></td>
        <td><%= link_to '削除', users_path, method: :delete, data: { confirm: '本当に削除していいですか？' } if user.id == current_user.id %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to '新規投稿', new_picture_path %>
