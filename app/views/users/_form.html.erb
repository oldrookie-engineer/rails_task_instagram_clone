

<h1>プロフィール編集</h1>
<h2><%= @user.name %>のページ</h2>
<p>プロフィール画像</p>
<img src="<%= @user.image %>">
<p>名前: <%= @user.name %></p>
<p>メールアドレス: <%= @user.email %></p>
<%= link_to 'プロフィール', users_path(@user.id) %>


def update
  if @user.update(user_params)
    redirect_to users_path(@user.id), notice: 'プロフィールを編集しました！'
  else
    render :edit
  end
end
